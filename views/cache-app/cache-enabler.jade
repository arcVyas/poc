doctype html
html
  head
    meta(charset='utf-8')
    title Cache Enabler
    link(href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css')
    link(rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
    link(rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/jqc-1.12.3/dt-1.10.12/af-2.1.2/b-1.2.1/cr-1.3.2/fc-3.2.2/fh-3.1.2/r-2.1.0/se-1.2.0/datatables.min.css")
    style.
    //  body,h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6, //.panel-title {
    //    font-family: 'Roboto', 'sans-serif';
    //    font-size: 12px;
    //  }
  body
    #wrapper
      .row
        .col-lg-12
          .panel.panel-info
            .panel-heading
              h3.panel-title
                .row
                  .col-lg-12
                    i.fa.fa-money.fa-fw
                    |  Cache Enabler
            .panel-body
              .row
                .col-lg-12
                  input.form-control(id="jvm" placeholder="JVM")
                .col-lg-12
                  input.form-control(id="port" placeholder="Port")
                .col-lg-12
                  input.form-control(id="context" placeholder="Context")
                .col-lg-12
                  input.form-control(id="seedList" placeholder="Seed List")
                .col-lg-4
                  a.btn.btn-primary(href="javascript:enableCache()") Enable
      .row
        .col-lg-12
          span(id="results")

  // scripts loaded here
  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
  script(type="text/javascript" src="https://cdn.datatables.net/v/bs/jqc-1.12.3/dt-1.10.12/af-2.1.2/b-1.2.1/cr-1.3.2/fc-3.2.2/fh-3.1.2/r-2.1.0/se-1.2.0/datatables.min.js")
  script(src='/bootstrap/js/bs-min.js')
  script.
    function enableCache(){
      var jvm = $("#jvm").val();
      var port = $("#port").val();
      var context = $("#context").val();
      var seedList = $("#seedList").val();
      var url = "/cache-app/enableCache?jvm="+jvm+"&port="+port+"&context="+context+"&seedList="+seedList;
      $.post(url)
      .done(function (data, textStatus, xhr) {  
        $("#results").html(data);
      });
    }
   