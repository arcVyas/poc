block content
  body(background="../img/hubble-bg.jpg" style="background-repeat:no-repeat;background-size:cover")
    div(class="container vertical-center")
      div(class="row")
        div(class="col-lg-12 well")
          div(class="intro-message")
            div.row
              div.col-sm-12
                h1(style="font-family:'Megrim'") XXXXX
                h4(style="font-family:'Questrial'") XXXXX ...
            div.row
              div.col-sm-12(align="right")
                form(class="form-horizontal" role="form" id="modalForm" action="./poc/login" method="POST")
                  div.row
                    div(class="form-group col-sm-6")
                      label(class="col-sm-4 control-label" for="inputUid") User Name
                    div(class="col-sm-6")
                      input(type="text" class="form-control required" id="inputUid" name="uid" placeholder="User Name")  
                  div.row
                    div(class="form-group col-sm-6")
                      label(class="col-sm-4 control-label" for="inputName") Name
                    div(class="col-sm-6")
                      input(type="text" class="form-control required" id="inputPwd" name="pwd" placeholder="Password")  
                  div.row  
                    div(class="col-sm-12")
                      button(type="submit" class="btn btn-default" id="submitButton") Login

                  
